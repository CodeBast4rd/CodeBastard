@page "{name?}"

@model RazorPages.Pages.Show.MagicGlue.GlueBrand

<div class="center-block" style="text-align: center;">
  <h2>Mehr Vodoo? Gerne mit RazorPages</h2>
  <h3>Hier kommt die Handler Magic</h3>
</div>

<div class="container">
  <form method="POST" class="form-horizontal" role="form">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
      <h4>Kleber Marken Manipulator: </h4>
      <label asp-for="@Model.BrandName">@Model.BrandName</label>
      <input asp-for="@Model.BrandName" />
      <span asp-validation-for="@Model.BrandName"></span>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <button type="submit" class="btn btn-primary">Manipulieren</button>
      </div>
    </div>
    <div class="form-group">
      <label>Kleber Marken Beispiele</label>
      <ul>
        @foreach (string item in @Model.BrandNameExampelList) {
          <li>@item</li>
        }
      </ul>
    </div>
  </form>
</div>